{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "spec.js", "spec.ts", "bin"]
}
